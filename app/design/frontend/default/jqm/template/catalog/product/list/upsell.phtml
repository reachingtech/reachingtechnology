<?php if(count($this->getItemCollection()->getItems())): ?>
<ul class="box-collateral box-up-sell" data-role="listview">
    <li data-role="divider"><?php echo $this->__('You may also be interested in the following product(s)') ?></li>
    <?php $this->resetItemsIterator() ?>
        <?php for($_j=0;$_j<$this->getColumnCount();$_j++): ?>
            <?php if($_link=$this->getIterableItem()): ?>
				<li>
					<a href="<?php echo $_link->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_link->getName()) ?>" class="product-image">
						<img src="<?php echo $this->helper('catalog/image')->init($_link, 'small_image')->resize(135); ?>" width="135" height="135" alt="<?php echo $this->htmlEscape($_link->getName()) ?>" />
						<h3 class="product-name"><?php echo $this->htmlEscape($_link->getName()) ?></h3>
						<p class="product-shop">				
							<?php
								$_helper = $this->helper('catalog/output');
								$product = Mage::getModel('catalog/product')->load($_link->getEntity_id());
								$short_description = strip_tags($product->getShortDescription(),"<p>,<div>,<span>");
								echo $_helper->productAttribute($product, $short_description, 'short_description');
							?>							
						</p>
					</a>
				</li>           
            <?php endif; ?>
        <?php endfor; ?>
</ul>
<?php endif ?>
